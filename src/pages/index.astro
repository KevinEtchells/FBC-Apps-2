---
import '../styles/global.css';

const response = await fetch(`https://api.trello.com/1/boards/${process.env.TRELLO_BOARD_ID}/cards?key=${process.env.TRELLO_API_KEY}&token=${process.env.TRELLO_API_TOKEN}`);
const data = await response.json();

const Lists = [
	{id: '680e8ff0edd87ada2a6c044c', title: 'Ideas'},
	{id: '680e8ff564cb56c2c1a62f36', title: 'To do'},
	{id: '680e8fff0d8342b9fc3b33d3', title: 'In progress'},
	{id: '680e900178f243d77fa305f4', title: 'Complete'},
];

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>AV/IT Trello Board</title>
	</head>
	<body class="px-4 py-3">
		<header class="">
			<h1 class="border-b-1 border-stone-400 font-bold pb-3 text-2xl">AV/IT Trello Board</h1>
		</header>
		<main class="gap-2 md:grid grid-cols-4 mt-4">
			{ Lists.map((list) =>
				<div class="bg-stone-100 p-2 rounded-lg">
					<h2 class="font-bold text-xl">{ list.title }</h2>
					<ul class="overflow-y-scroll md:max-h-[calc(100vh-7.5rem)]">
						{ data.filter((card) => card.idList === list.id).map((card) => 
							<li class="bg-white border-1 border-stone-400 break-all mt-2 overflow-hidden p-2 rounded-md lg:break-normal">
								<div>
									<ul class="flex gap-1 min-h-6">
										{ card.labels.map((label) =>
											<li class={ 'px-2 py-1 text-xs rounded-sm ' + (label.color === 'yellow' ? '' : 'text-white') } style={ 'background-color: ' + label.color }>{ label.name }</li>
										)}
										{ !card.labels.length &&
											<li class="bg-stone-100 px-2 py-1 text-xs rounded-sm">No label</li>
										}
									</ul>
									<h3 class="font-bold mt-1 text-lg">{ card.name }</h3>
									{ card.desc &&
										<p class="mt-2 text-md">{ card.desc }</p>
									}
								</div>
								<p class="mt-2 text-sm"><strong>Last update:</strong> { new Date(card.dateLastActivity).toLocaleString('en-GB') }</p>
							</li>
						)}
					</ul>
				</div>
			)}
		</main>
	</body>
</html>
